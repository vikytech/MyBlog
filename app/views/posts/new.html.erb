<H1>Add a New post Here</H1>

<%= form_for @post do |f| %>

    <% if @post.errors.any? %>
        <H2>Error:</H2>
        <ul>
          <% @post.errors.full_messages.each do |message| %>
              <li> <%= message %> </li>
              </ul>
          <% end %>
    <% end %>

    <p>
      <%= f.label :title %>
      <br/>
      <%= f.text_field :title %>

    </p>

    <p>
      <%= f.label :content %>
      <br/>
      <%= f.text_area :content %>
    </p>

    <p>
      <%= f.submit "Add a new Post" %>
    </p>
<% end %>